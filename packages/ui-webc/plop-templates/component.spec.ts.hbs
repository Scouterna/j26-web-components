import { newSpecPage } from '@stencil/core/testing';
import { {{pascalCase name}} } from './{{name}}';

describe('{{name}}', () => {
  it('renders', async () => {
    const { root } = await newSpecPage({
      components: [{{pascalCase name}}],
      html: '<{{name}}></{{name}}>',
    });
    expect(root).toEqualHtml(`
      <{{name}}>
        <mock:shadow-root>
          <div>
            <slot></slot>
          </div>
        </mock:shadow-root>
      </{{name}}>
    `);
  });

  it('renders with variant', async () => {
    const { root } = await newSpecPage({
      components: [{{pascalCase name}}],
      html: '<{{name}} variant="default"></{{name}}>',
    });
    expect(root).toEqualHtml(`
      <{{name}} variant="default">
        <mock:shadow-root>
          <div class="default">
            <slot></slot>
          </div>
        </mock:shadow-root>
      </{{name}}>
    `);
  });
});
