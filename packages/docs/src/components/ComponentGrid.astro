---
interface Props {
  cols?: number;
}

const { cols = 2 } = Astro.props;
---

<div class="component-grid" style={`--grid-cols: ${cols}`}>
  <slot />
</div>

<style>
  .component-grid {
    display: grid;
    grid-template-columns: repeat(var(--grid-cols, 2), 1fr);
    gap: 1rem;
    margin: 2rem 0;
  }

  @media (max-width: 768px) {
    .component-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
